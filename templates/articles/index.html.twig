{% extends 'base.html.twig' %}

{% block title %} Symphart articles{% endblock %}

{% block body %}
    <h1>Articles</h1>

    {% if articles %}
    <table class="table table-stripped">
        <thead>
            <tr>
                <th>Article Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
                {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td><a href="/symphart/public/article/{{article.id}}" class="btn btn-dark">Show</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    {% else %}
        <p>no articles</p>
    {% endif %}
    

{% endblock %}
